<div class="container skill_show">
  <div>
    <div class="card-show">
      <h1><%= @skill.name %>!</h1>
      <h5>Hours spent studying: 20</h5>
      <h5>Level: <%= @skill.level %></h5>
      <h4>Points: <%= @skill.points %></h4>
      <a class="small_button" id="skill_show" href=<%= "/skills/#{params[:id]}/study_sessions/new"%>>
        <span>Start this study session</span>
      </a>
    </div>
    <!--       <div class="small_button">
        <span><#%= link_to "Study Session for #{@skill.name}", new_skill_study_session_path(@skill)  %></span>
      </div> -->
    <div class="summary-advice card-show">
      <div class="summary">
        <h5>Goals you have had:</h5>
        <a class="text_field" href="#">
          <span><%= @skill.study_sessions.last.goal %></span>
        </a>
        <a class="text_field" href="#">
          <span><%= @skill.study_sessions.sample.goal %></span>
        </a>
        <!-- PLS add conditional if goal is empty, show a different one -->
      </div>
      <div class="advice">
        <h5>If you are stuck, consider:</h5>
        <a class="text_field" href="#">
          <span>Host Project on Heroku</span>
        </a>
        <a class="text_field" href="#">
          <span>Pair Program w/ Friend</span>
        </a>
      </div>
    </div>
    <div class="milestones card-show">
      <h2><%= @skill.name %> milestones!</h2>
      <div>
        <% @skill.milestones.each do |milestone| %>
          <ul>
            <li class=<%="#{'complete' if milestone.complete_date}"%>><%= milestone.goal %> <%= milestone.complete_date ? milestone.complete_date.strftime("%b %d, %Y") : button_to("done?", "/milestones/#{milestone.id}/complete", method: :patch, form_class: "done") %></li>
          </ul>
        <% end %>
        <!-- These are the text fields for setting milestones, etc. -->
        <a class="text_field" href=<%="/skills/#{params[:id]}/milestones/new"%>>
          <span>Add a new milestone</span>
        </a>
      </div>
      <%= link_to "Back to User", user_path(current_user), style: "color: black"  %>
    </div>
  </div>