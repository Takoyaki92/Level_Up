<body class="wallpaper">
  <div class="container">
    <h2>Choose your skill and goal</h2>
    <%= simple_form_for @study_session do |f| %>
      <%= f.association :skill, collection: current_user.skills %>
      <%= f.input :goal, as: :text %>
      <%# end %>
      <div id="app-timer">
        <div class="app-timer-main">
          <h1>TIMER</h1>
          <h1 class="timer">00:00:00</h1>
          <div class="study_button start"><span>Start</span></div>
          <%# <button class="btn btn-warning stop">Stop</button>
          <button class="btn btn-primary reset">Reset</button> %>
        </div>
        <br>
      </div>
      <div class="btn btn-info" id="finish">Finish!</div>
      <div id="one" style="display: none;">
        <h3>Nice work! Make a post so others can see your progress</h3>
        <div class="row justify-content-center">
          <div class="col-12">
            <%#= simple_form_for [ @skill, @study_session ] do |f| %>
              <%= f.text_area :description, label:"What did you accomplish?", class: "form-control form-control-lg" %>
              <%= f.collection_radio_buttons :public, [[true, 'Public (Recommended)'] ,[false, 'Private']], :first, :last %>
              <%= f.input :photo, label: "Show us what you did!", as: :file %>
              <%= f.button :submit, "Share!", class: "small_button" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
