<body class="wallpaper">
  <%= simple_form_for [ @skill, @study_session] do |f| %>
    <div class="video-wallpaper">
      <video muted loop id="background-video">
        <source src="<%= image_path("beach.mp4") %>" type="video/mp4">
      </video>
      <audio loop id="beach-sounds">
        <source src="<%= image_path("beach-sounds.wav") %>" type="audio/wav">
      </audio>
      <h2 class="animate__animated animate__fadeInDown text-white new-h2" id="new-skill-title">Choose your skill and goal</h2>
      <div id="flex-body">
        <div class="card-style animate__animated animate__fadeInUp position" id="card">
          <div>
            <%= f.association :skill, collection: current_user.skills %>
            <%= f.input :goal, as: :text, selected: @goal %>
            <%# end %>
          </div>
        </div>
        <div class="row">
          <div class="card-style animate__animated animate__fadeInUp d-none position" id="time-card">
            <div id="app-timer">
              <div class="app-timer-main">
                <h1>TRY YOUR BEST</h1>
                <h1 class="timer">00:00</h1>
                <div class="study_button start" ><span id="start">Start</span></div>
                <div class="finish-button">
                  <div class="btn btn-primary" id="finish">Finish</div>
                </div>
              </div>
            </div>
          </div>
          <div id="one" style="display: none;">
            <div class="row">
              <div class="card-style animate__animated animate__fadeInUp animate__delay-1s position" id="submit-card">
                <h3 class="m-4 text-center">Nice work, Make a post so others can see your progress</h3>
                <div class="row justify-content-center">
                  <div class="col-12">
                    <%#= simple_form_for [ @skill, @study_session ] do |f| %>
                      <%= f.text_area :description, label:"What did you accomplish?", class: "form-control form-control-lg", style: "height: 200px;" %>
                      <%= f.input :photo, label: "Add a photo to show what you did", as: :file, class: "h4 m-4" %>
                      <div id="hidden">
                        <%= f.input :end_time, class: "end_time" %>
                      </div>
                      <div class="submit-form">

                        <%= f.button :submit, "Share", class: "btn btn-primary" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </body>
    </div>
