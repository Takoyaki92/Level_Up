<h1>Here's what other people have been up to</h1>
<div class="container-flex">
<%# <% column = 0 %>
  <% @study_sessions.reverse.each do |post| %>
    <%# <% if index.even? %>
      <%# <div class="row-left"></div>
    <% if index.odd? %>
      <%# <div class="row-right">
    <% end %>
          <div id="wrapper">
              <header class="cf">
                <!-- <img src="http://2016.igem.org/wiki/images/e/e0/Uclascrolldown.png" class="arrow" /> -->
                <% if post.skill.user.photo.present? %>
                  <%= cl_image_tag post.skill.user.photo.key, class: "avatar" %>
                <% else %>
                  <%= image_tag "https://emoji.slack-edge.com/T02NE0241/pduck/659a4bd31b52c211.png", class: "avatar" %>
                <% end %>
                <p class="name">
                  <a href=<%= user_path(post.skill.user) %>><%= post.skill.user.username %></a>
                </p>

                <p class="date">
                  <% if ((Time.now - post.created_at) / 60).to_i == 0 %>
                  Just now
                  <% elsif ((Time.now - post.created_at) / 60).to_i == 1 %>
                  <%= ((Time.now - post.created_at) / 60).to_i %> minute ago
                  <% else ((Time.now - post.created_at) / 60).to_i > 1 %>
                  <%= ((Time.now - post.created_at) / 60).to_i %> minutes ago
                  <% end %>
                </p>
              </header>

              <p class="status"><%= post.description %></p>
                <% if user_signed_in? && post.photo.attached? %>
                  <%= cl_image_tag post.photo.key, crop: :fill, class: "img-content" %>
                <% else %>      
                  <img class="img-content" src="https://london.ac.uk/sites/default/files/styles/promo_mobile/public/2020-04/sb-simone-image.jpg?itok=nAkc3CGk" />
                <% end %>

              <div class="action d-flex justify-content-between">
                <div class="like">
                  <i class="far fa-heart fa-sm"></i>
                    <p><%= post.likes.count %></p>

                </div>
              <div class="comment">
                <a href="#">
                
                <i class="far fa-comments fa-sm"></i>
                <p>
                <%= post.comments.count%>
                </p>
                
              </div>
            </div>

            <div class="actiontwo border-top border-dark d-flex justify-content-between">
              <div class="like-box">
              <% if post.liked?(current_user) %>
                    <a href="<%=unlike_path(post)%>" method="put">
                    <p>Unlike</p>
                  </a>
                  <% else %>
                    <a href="<%=like_path(post)%>" method="put">
                    <p id="like-<%= post.id %>">Like</p>
                <% end %>
              </div>
              
              <div class="container" id="comment-container">
                <div class="comment-box">
                  <a  data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                  <p>Comment</p>
                    </a>
                    <div class="collapse" id="collapseExample">
                      <div class="card card-body">
                        <%= simple_form_for([post, @comment], remote: true) do |f| %>
                        <%= f.input :description, label:"Enter Comment" %>
                          <%= f.button :submit, label:"Create", class: "btn btn-primary" %>
                        <% end %>
                     </div>
                  </div>
              </div>
              
              </div>
            </div>
            <div class="comment-list d-flex justify-content-left">
                  <div class = "flex-direction">
                    <% post.comments.each do |comment| %>
                      <% if comment.user.photo.present? %>
                        <%= cl_image_tag comment.user.photo.key, class: "avatar" %>
                      <% else %>
                        <%= image_tag "https://emoji.slack-edge.com/T02NE0241/pduck/659a4bd31b52c211.png", class: "avatar" %>
                      <% end %>
                      <p id="comment-<%= comment.id %>"><%= comment.user.username %></p>:
                      <%= comment.description %>
                    <% end %>
                  </div>
                </div>
          </div>
      </div>
    <%# <% end %>
  <% end %> 
</div>
