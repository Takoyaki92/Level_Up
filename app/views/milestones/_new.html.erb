<div class="container">
  <h2>Add a milestone for @user.skill</h2>
  <div class="row justify-content-center">
    <div class="col-12">
      <%= simple_form_for @milestone do |f| %>
        <%= f.input :goal, label:"What is your goal?" %>
        <%= f.button :submit, label:"Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>